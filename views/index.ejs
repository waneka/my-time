<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="stylesheets/bootstrap.min.css">
        <link rel="stylesheet" href="stylesheets/main.css">
    </head>
    <body>
        <div class="container">
            <div class="fixed-header row">
                <div class="col-xs-3 nav-back"><span class="glyphicon glyphicon-chevron-left"></span></div>
                <div class="col-xs-6 search-tab">
                    <h1 class="search-title">Search</h1>
                </div>
                <div class="col-xs-3 nav-menu"><span class="glyphicon glyphicon-align-justify"></span></div>
            </div>
            <div class="row search-bar">
                <div class="col-xs-12 search-input">
                    <form class="deals-search">
                        <input type="textarea" class="search-field" placeholder="Search for a business or service">
                        <i class="glyphicon glyphicon-search form-control-feedback"></i>
                    </form>
                </div>
            </div>
            <div class="row filter-map">
                <div class="col-xs-6 filter"><span class="glyphicon glyphicon-filter"></span>Filter</div>
                <div class="col-xs-6 map"><span class="glyphicon glyphicon-map-marker"></span>Map</div>
            </div>
            <div class="deals-container row">
                <div class="col-xs-12">
                    <div class="deals"></div>
                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/0.8.1/mustache.min.js"></script>
        <script src="/javascripts/main.js"></script>
        <script id="business" type="x-tmpl-mustache">
            {{#deals}}
                <div class="deal-container">
                    <div class="deal-details">
                        <div class="photo-container">
                            <img class="photo" src="{{photo_url}}">
                        </div>
                        <h1 class="deal-title">{{name}}</h1>
                        <div>{{service_name}}</div>
                        <div>0.1 mi away</div>
                        <a href="#">Next appt 11/7/14</a>
                    </div>
                    <div class="rating-price">
                        {{#yelp_rating_image_url}}
                        <div class="yelp-rating">
                            <img src="{{yelp_rating_image_url}}">
                        </div>
                        <div class="yelp-logo"></div>
                        {{/yelp_rating_image_url}}
                        <div class="price-range">${{min_price}} - ${{max_price}}</div>
                        {{#on_sale}}
                        <button class="btn salebtn">SALE</button>
                        {{/on_sale}}
                    </div>
                </div>
            {{/deals}}
        </script>
    </body>
</html>
